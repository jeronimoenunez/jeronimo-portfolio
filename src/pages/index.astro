---
import HeroVertical from "../components/sections/HeroScroll/HeroVertical.astro";
import IdentitySection from "../components/sections/IdentitySection.astro";
import SelectedWorks from "../components/sections/SelectedWorks.astro";
import WorkScatter from "../components/sections/WorkScatter.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import Footer from "@/components/Footer.astro";
import { projects } from "../content/projects";
import { works, workMotion } from "../domain/works";
---

<BaseLayout title="Jerónimo Núñez | Frontend Engineer" lang="es">
  <main>
    <section aria-label="Hero">
      <HeroVertical />
    </section>

    <section id="enfoque" aria-label="Enfoque">
      <IdentitySection />
    </section>

    <section id="destacados" aria-label="Destacados">
      <SelectedWorks
        sectionNo="03"
        label="Trabajos Destacados"
        range="24 - 26’"
        projects={projects}
      />
    </section>

    <section id="projects" aria-label="Proyectos">
      <WorkScatter title="Proyectos" works={works} motion={workMotion} />
    </section>

    <section id="contact" aria-label="Contacto">
      <Footer />
    </section>
  </main>
</BaseLayout>