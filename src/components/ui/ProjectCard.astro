---
import type { Project } from '../../types/Project';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="project-card">
  <h3>{project.title}</h3>
  <p>{project.description}</p>

  <ul class="stack">
    {project.stack.map((tech) => (
      <li>{tech}</li>
    ))}
  </ul>

  <span class="domain">{project.domain}</span>
</article>

<style>
  .project-card {
    border: 1px solid #222;
    padding: 1.5rem;
    border-radius: 8px;
  }

  .stack {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .domain {
    opacity: 0.7;
    font-size: 0.875rem;
  }
</style>
