---
import styles from "./HeroScroll.module.css";
const panels = ["INTRO", "ARCHITECT", "PROJECTS", "VISION"];
---

<section class={styles.hero} data-hero>
  <div class={styles.sticky}>
    <!-- Capa video (aparece después) -->
    <div class={styles.videoLayer} data-video-layer aria-hidden="true">
      <button class={styles.videoCta} type="button" data-video-cta>
        ▶ Watch intro
      </button>

      <!-- Podés reemplazarlo por tu video real -->
      <video
        class={styles.video}
        data-video
        muted
        playsinline
        preload="metadata"
        src="/videos/intro.mp4"
      ></video>
    </div>

    <!-- Capa tipográfica (texto gigante con máscara) -->
    <div class={styles.typeLayer} data-type-layer>
      <div class={styles.track} data-track>
        {panels.map((t) => (
          <div class={styles.panel} data-panel>
            <span class={styles.word} data-word>{t}</span>
          </div>
        ))}
      </div>

      <!-- “malla”/oscurecido diagonal opcional -->
      <div class={styles.shade} aria-hidden="true"></div>
    </div>
  </div>
</section>

<!-- Script client -->
<script type="module" src="./heroHorizontal.client.ts"></script>
