---
import SiteHeader from "@/components/SiteHeader.astro";
// He añadido un favicon y descripción básica para SEO
const { title = "Jerónimo Núñez | Frontend Engineer", lang = "es" } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Frontend Engineer especializado en arquitectura de producto y sistemas escalables." />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>

  <body id="inicio">
    <SiteHeader
      brand="JERÓNIMO NÚÑEZ"
      location="La Plata, AR"
      leftNav={[
        { label: "Home", href: "#inicio" },
        { label: "Enfoque", href: "#enfoque" },
        { label: "Destacados", href: "#destacados" },
        { label: "Proyectos", href: "#projects" },
      ]}
      rightNav={[{ label: "Contacto", href: "#contact" }]}
      sticky={true}
    />

    <slot />

    <style is:global>
      html {
        scroll-behavior: smooth;
        /* ✅ IMPORTANTE: Ajusta esto según la altura de tu header 
           para que las anclas no queden tapadas */
        scroll-padding-top: 80px; 
      }
    </style>
  </body>
</html>